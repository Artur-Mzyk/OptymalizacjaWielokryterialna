<MenuScreen>:
    GridLayout:
        id: main_layout
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        rows: 2
        cols: 2
        GridLayout:
            id: genres_layout
            rows: 6
            cols: 4
            size_hint_x: main_layout.width * 0.5
            size_hint_y: main_layout.height * 0.5
            Label:
                text: "Zaznacz ulubione gatunki"
                color: "black"
        GridLayout:
            id: numbers_layout
            rows: 1
            cols: 2
            size_hint_x: main_layout.width * 0.5
            size_hint_y: main_layout.height * 0.5
            Label:
                text: "Wybierz liczbę najlepiej ocenianych filmów"
                color: "black"
            Label:
                text: ""
                color: "black"
        GridLayout:
            id: movies_layout
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            rows: 2
            cols: 3
            padding: 10
            size_hint_x: main_layout.width * 0.5
            size_hint_y: main_layout.height * 0.5
            Label:
                text: "Rok produkcji"
                color: "black"
                size_hint_x: movies_layout.width * 0.5
            Label:
                text: "Obsada"
                color: "black"
                size_hint_x: movies_layout.width * 0.5
            Button:
                text: "Pobierz"
                on_press: root.get_top_movies()
                size_hint_x: movies_layout.width * 0.5
            TextInput:
                id: release_year
                size_hint_x: movies_layout.width * 0.5
            TextInput:
                id: cast
                size_hint_x: movies_layout.width * 0.5
            Label:
                id: top_movies_list
                text: ""
                color: "black"
                size_hint_x: movies_layout.width * 0.5
        GridLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            rows: 2
            cols: 3
            padding: 10
            size_hint_y: main_layout.height * 0.5