<MenuScreen>:
    GridLayout:
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        rows: 2
        cols: 2
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            padding: 10
            GridLayout:
                id: criteria_layout
                rows: 1
                cols: 3
                Label:
                    text: ""
                    color: "black"
                Label:
                    text: "Nazwa"
                    color: "black"
                Label:
                    text: "Kierunek"
                    color: "black"
            GridLayout:
                rows: 1
                cols: 2
                Button:
                    text: "Dodaj"
                    on_press: root.add_criteria()
                Button:
                    id: remove_criteria
                    text: "Usuń"
        GridLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            padding: 10
            rows: 2
            cols: 1
            GridLayout:
                id: points_layout
                rows: 1
                cols: 1
            GridLayout:
                rows: 1
                cols: 2
                Button:
                    id: 1
                    text: "Dodaj"
                    on_press: root.add_point()
                Button:
                    id: 1
                    text: "Usuń"
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            padding: 10
            GridLayout:
                rows: 4
                cols: 1
                GridLayout:
                    rows: 1
                    cols: 3
                    Label:
                        text: "Rozkład"
                        color: "black"
                    Button:
                        id: choose_distribution
                GridLayout:
                    rows: 1
                    cols: 3
                    Label:
                        text: "Średnia"
                        color: "black"
                    Label:
                        text: "Odchylenie"
                        color: "black"
                    Label:
                        text: "Liczba obiektów"
                        color: "black"
                GridLayout:
                    rows: 1
                    cols: 3
                    TextInput:
                        id: 1
                    TextInput:
                        id: 1
                    TextInput:
                        id: 1
                GridLayout:
                    rows: 1
                    cols: 3
                    Button:
                        id: 1
                        text: "Generuj"
                    Button:
                        id: sort_points
                        text: "Sortuj"
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 2
            orientation: "vertical"
            padding: 10
            GridLayout:
                rows: 2
                cols: 1
                GridLayout:
                    rows: 1
                    cols: 2
                    Label:
                        text: "Algorytm"
                        color: "black"
                    Button:
                        id: choose_algorithm
                GridLayout:
                    rows: 1
                    cols: 4
                    Button:
                        text: "Renderuj animację"
                    Button:
                        text: "Przerwij"
                    Button:
                        text: "Benchmark"
                    Button:
                        text: "Rozwiąż"
